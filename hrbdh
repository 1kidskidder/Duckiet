local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Camera = workspace.CurrentCamera
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")

local AimRadius = 100 -- The radius of the FOV circle
local SilentAimEnabled = true
local currentFovCircleColor = Color3.fromRGB(255, 0, 0) -- Initial color: Red

-- Create an Aim Circle
local ScreenGui = Instance.new("ScreenGui")
local AimCircle = Instance.new("Frame")

ScreenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")
AimCircle.Parent = ScreenGui

AimCircle.Size = UDim2.new(0, AimRadius * 2, 0, AimRadius * 2) -- Diameter of the circle
AimCircle.Position = UDim2.new(0.5, -AimRadius, 0.5, -AimRadius) -- Center the circle around the middle of the screen
AimCircle.BackgroundTransparency = 1
AimCircle.BorderSizePixel = 0

local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(1, 0)
uiCorner.Parent = AimCircle

local uiStroke = Instance.new("UIStroke")
uiStroke.Thickness = 2
uiStroke.Color = currentFovCircleColor -- Initial color
uiStroke.Parent = AimCircle

-- Function to update the FOV Circle color
local function changeFovCircleColor(newColor)
    currentFovCircleColor = newColor
    uiStroke.Color = currentFovCircleColor
end

-- Update the circle's position to keep it centered on the screen
local function updateCirclePosition()
    AimCircle.Position = UDim2.new(0.5, -AimRadius, 0.5, -AimRadius)
end

RunService.RenderStepped:Connect(updateCirclePosition)

-- Find the closest enemy within the FOV
local function getClosestEnemy()
    local closestEnemy = nil
    local closestDistance = AimRadius

    for _, player in ipairs(Players:GetPlayers()) do
        if player ~= LocalPlayer and player.Team ~= LocalPlayer.Team and player.Character and player.Character:FindFirstChild("Head") then
            local pos, onScreen = Camera:WorldToScreenPoint(player.Character.Head.Position)
            if onScreen then
local screenSize = UserInputService:GetScreenSize()
                local screenCenter = Vector2.new(screenSize.X / 2, screenSize.Y / 2)
                local distance = (screenCenter - Vector2.new(pos.X, pos.Y)).magnitude
                if distance < closestDistance then
                    closestDistance = distance
                    closestEnemy = player
                end
            end
        end
    end

    return closestEnemy
end

-- Aim at the closest enemy's head
local function aimAt(enemy)
    if enemy and enemy.Character and enemy.Character:FindFirstChild("Head") then
        local headPos = Camera:WorldToScreenPoint(enemy.Character.Head.Position)
        UserInputService.MouseBehavior = Enum.MouseBehavior.LockCenter -- Lock the cursor to the center
        Camera.CFrame = CFrame.new(Camera.CFrame.Position, enemy.Character.Head.Position) -- Aim at enemy's head
    end
end

RunService.RenderStepped:Connect(function()
    if SilentAimEnabled then
        local target = getClosestEnemy()
        aimAt(target)
    end
end)

-- Example function to change color based on some in-game event
-- Replace this with actual in-game logic
local function onColorChangeRequested()
    changeFovCircleColor(Color3.fromRGB(203, 195, 227)) -- Change color to green
end